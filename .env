# ==========================================================================
# CONFIGURAÇÕES DE AMBIENTE - CONTROLE FINANCEIRO
# ==========================================================================
# Propósito: Centralizar configurações por ambiente (dev, prod)
# Uso: process.env.NOME_VARIAVEL no código JavaScript
# Efeitos: Facilitar deploy e configuração entre ambientes

# ==========================================================================
# API CONFIGURATION
# ==========================================================================
# URL base da API REST backend
VITE_API_BASE_URL=http://localhost:3000/api

# Timeout para requisições HTTP (milissegundos)
VITE_API_TIMEOUT=15000

# ==========================================================================
# APPLICATION SETTINGS
# ==========================================================================
# Nome da aplicação
VITE_APP_NAME=Controle Financeiro

# Versão da aplicação
VITE_APP_VERSION=1.0.0

# ==========================================================================
# AUTHENTICATION SETTINGS
# ==========================================================================
# Tempo de expiração do token em localStorage (dias)
VITE_TOKEN_EXPIRY_DAYS=7

# Nome da chave no localStorage para o token
VITE_TOKEN_STORAGE_KEY=auth_token

# ==========================================================================
# UI CONFIGURATION
# ==========================================================================
# Tema padrão (light, dark, auto)
VITE_DEFAULT_THEME=light

# Idioma padrão
VITE_DEFAULT_LOCALE=pt-BR

# Moeda padrão
VITE_DEFAULT_CURRENCY=BRL

# ==========================================================================
# DEVELOPMENT SETTINGS
# ==========================================================================
# Habilitar logs detalhados no console
VITE_DEBUG_LOGS=true

# ==========================================================================
# FEATURE FLAGS
# ==========================================================================
# Habilitar modo offline (cache local)
VITE_ENABLE_OFFLINE_MODE=false

# Habilitar notificações push
VITE_ENABLE_PUSH_NOTIFICATIONS=false